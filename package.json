{
    "name": "nativescript-extendedinfo",
    "version": "1.0.0",
    "scripts": {
        "tsc": "cp src/extendedinfo.d.ts plugin && tsc -skipLibCheck -d",
        "build": "rm -f .tsbuildinfo && npm run tsc && npm run build.esm && node ./build.esm.js",
        "build.esm": "tsc -skipLibCheck --target es2015 --removeComments --outDir build/esm",
        "demo.ios": "npm i && npm run tsc && cd demo && tns run ios",
        "demo.android": "npm i && npm run tsc && cd demo && tns run android",
        "clean.demo": "rimraf demo/hooks demo/node_modules demo/platforms",
        "clean": "rimraf plugin/ios plugin/android plugin/**/*.d.ts plugin/**/*.js plugin/**/*.js.map plugin/node_modules plugin/package-lock.json",
        "plugin.watch.tsc": "npm run tsc -- -w",
        "plugin.watch.android": "npm i && npm-watch build.android",
        "plugin.watch.ios": "npm i && npm-watch build.ios",
        "plugin.watch": "npm run plugin.watch.tsc & npm run plugin.watch.android & npm run plugin.watch.ios"
    },
    "devDependencies": {
        "@types/node": "^10.12.21",
        "npm-watch": "^0.6.0",
        "prompt": "^1.0.0",
        "recursive-copy": "^2.0.10",
        "rimraf": "^3.0.2",
        "through2": "^3.0.1",
        "@nativescript/core": "6.5.1",
        "tns-platform-declarations": "^6.5.1",
        "tslint": "^6.1.2",
        "tslint-config-prettier": "^1.18.0",
        "tslint-config-standard": "^8.0.1",
        "typescript": "~3.2.4"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Akylas/nativescript-extendedinfo.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Akylas/nativescript-extendedinfo/issues"
    },
    "homepage": "https://github.com/Akylas/nativescript-extendedinfo#readme"
}
